<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--style for Work, Rest, Repeat & Play views-->
    <style name="button" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/app_red</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">.5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:inputType">number</item>

        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--Counter Timer info boxes-->
    <style name="counter_timer_info_box" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/app_dk_dk_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/app_black</item>
    </style>

    <!--Counter Timer info box labels-->
    <style name="counter_timer_info_box_label" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/counter_info_box_text_size</item>
        <item name="android:textColor">@color/app_dk_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/app_black</item>
    </style>

</resources>
